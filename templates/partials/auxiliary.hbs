{{!-- When divided status selected will show two sets of status dice that can be set for the --}}
{{!-- civilian and powered mode --}}
{{#if (eq actor.system.dividedStatus true)}}
<div class="section-name section-name-divided">
    <h3>{{localize "SCRPG.powerquality.statusDice"}}</h3>
</div>
<div class="status-dice box-border divided-status">
    <h3>{{localize "SCRPG.auxiliary.powered"}}</h3>
    <h3>{{localize "SCRPG.auxiliary.civilian"}}</h3>
    <select class="status-die-update green-border green-status-background" name="system.statusDie.green">
        {{selectOptions config.dieTypes selected=actor.system.statusDie.green localize=true}}
    </select>

    <select class="status-die-update green-border green-status-background" name="system.statusDie.civilianGreen">
        {{selectOptions config.dieTypes selected=actor.system.statusDie.civilianGreen localize=true}}
    </select>

    <select class="status-die-update yellow-border yellow-status-background" name="system.statusDie.yellow">
        {{selectOptions config.dieTypes selected=actor.system.statusDie.yellow localize=true}}
    </select>

    <select class="status-die-update yellow-border yellow-status-background" name="system.statusDie.civilianYellow">
        {{selectOptions config.dieTypes selected=actor.system.statusDie.civilianYellow localize=true}}
    </select>

    <select class="status-die-update red-border red-status-background" name="system.statusDie.red">
        {{selectOptions config.dieTypes selected=actor.system.statusDie.red localize=true}}
    </select>

    <select class="status-die-update red-border red-status-background" name="system.statusDie.civilianRed">
        {{selectOptions config.dieTypes selected=actor.system.statusDie.civilianRed localize=true}}
    </select>
</div>

{{/if}}