{{!-- Default mode/form --}}
<div {{#if (eq data.data.mode "main" )}} class="select-border green-abilities mode-name"
    {{else}}class="box-border green-abilities mode-name" {{/if}}>
    <input class="mode-name-input" type="text" name="data.modeName.main"
        value="{{getLocalizeModeForm data.data.modeName.main}}" />
    {{!-- Buttons for minimizing the details and applying it to character --}}
    <a title='{{localize "SCRPG.button.show"}}' class="show-main mode-item" {{#if (eq data.data.modeDisplayed.main true
        )}} style="color:green" {{/if}} data-aux="main">
        <i class="fas fa-expand-arrows-alt"></i>
    </a>
    <a title='{{localize "SCRPG.button.changeMode"}}' class="set-mode mode-item" {{#if (eq data.data.mode "main" )}}
        style="color:green" {{/if}} data-aux="main">
        <i class="fas fa-upload"></i>
    </a>
</div>
{{!-- Displays powers, description and ability --}}
{{#if (eq data.data.modeDisplayed.main true)}}
<div class="mode-card box-border green-abilities">
    <div class="forms">
        {{> "systems/scrpg/templates/partials/auxiliarypowers.hbs" mode="main"}}

        <div>
            <table class="box-border">
                <tr>
                    <th>
                        {{localize "SCRPG.abilities.description"}}
                    </th>
                <tr>
                    <td>
                        {{editor content=data.data.modeDescription.main target="data.modeDescription.main"
                        button=true
                        owner=owner editable=editable}}
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
{{else}}
<br>
{{/if}}

