<form class="{{cssClass}}" autocomplete="off">
    <div class="minion-count">
        <h3 style="padding-right: 4px;">{{localize "SCRPG.sheet.group"}}:</h3>

        <select name="system.groups" selected={{actor.system.groups}}>
            <option value="1">{{actor.system.groupName.one}}</option>
            <option value="2">{{actor.system.groupName.two}}</option>
            <option value="3">{{actor.system.groupName.three}}</option>
            <option value="4">{{actor.system.groupName.four}}</option>
            <option value="5">{{actor.system.groupName.five}}</option>
            <option value="6">{{actor.system.groupName.six}}</option>
            <option value="7">{{actor.system.groupName.seven}}</option>
            <option value="8">{{actor.system.groupName.eight}}</option>
            <option value="9">{{actor.system.groupName.nine}}</option>
            <option value="10">{{actor.system.groupName.ten}}</option>
        </select>
    </div>

    {{#if (eq actor.system.groups "1")}}
    <div class="box-border minion-group-name">
        <h3>
            <input class="minion-group-name-input" type="text" name="system.groupName.one"
                value="{{actor.system.groupName.one}}" placeholder='{{localize "SCRPG.minion.minionlieutenant"}}'>
        </h3>
        {{!-- Buttons for minimizing the details and applying it to character --}}
        <select name="system.typicalDie.one">
            {{selectOptions config.dieTypes selected=actor.system.typicalDie.one localize=true}}
        </select>
        <a title='{{localize "SCRPG.button.addNew" }}' class="item-create minion-group-item" data-type="heroMinion"
            data-group=1 data-dietype={{actor.system.typicalDie.one}}>
            <i class="fas fa-plus"></i>
        </a>
        {{> "systems/Sentinels-Foundry/templates/partials/minionsheetbuttons.hbs" index=1}}
    </div>
    {{> "systems/Sentinels-Foundry/templates/partials/miniongroups.hbs" index=1}}
    {{/if}}

